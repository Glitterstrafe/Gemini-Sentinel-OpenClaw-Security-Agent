# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ===========================================
# GEMINI API CONFIGURATION
# ===========================================
# Your Gemini API key from https://ai.google.dev/
# Required for the security analysis features
GEMINI_API_KEY=your_api_key_here

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port for the API server (default: 8787)
PORT=8787

# Node environment (development/production)
NODE_ENV=development

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Enable strict security headers (recommended: true)
ENABLE_SECURITY_HEADERS=true

# Enable secret redaction (recommended: true)
ENABLE_SECRET_REDACTION=true

# Maximum file size in bytes (default: 1MB)
MAX_FILE_SIZE_BYTES=1048576

# Maximum total payload size (default: 6MB)
MAX_TOTAL_SIZE_BYTES=6291456

# Maximum number of files per request (default: 300)
MAX_FILE_COUNT=300

# ===========================================
# ACCESS CONTROL (Optional)
# ===========================================
# Comma-separated list of allowed IP addresses
# Leave empty to allow all (not recommended for production)
# ALLOWED_IPS=127.0.0.1,::1

# API authentication token (optional but recommended)
# Generate with: openssl rand -hex 32
# API_AUTH_TOKEN=

# ===========================================
# LOGGING (Optional)
# ===========================================
# Log level (error/warn/info/debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=false

# ===========================================
# SECURITY NOTES
# ===========================================
# 1. Keep this file secure with: chmod 400 .env
# 2. Never commit .env to git (it's in .gitignore)
# 3. Rotate API keys regularly
# 4. Use different keys for dev/staging/production
# 5. Monitor API key usage in your provider dashboard
# 6. Consider using a secrets manager for production
